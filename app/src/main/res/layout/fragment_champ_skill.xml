<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--    <com.google.android.exoplayer2.ui.PlayerView-->
    <!--        android:id="@+id/mVdvSKill"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:resize_mode="fit" />-->

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/mVdvSKill"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:0.682"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/layoutSkill"
        app:layout_constraintTop_toBottomOf="@id/mVdvSKill">

        <TextView
            android:id="@+id/mTvSKillName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="#000"
            android:textSize="20sp"
            app:fontFamily="monospace" />

        <TextView
            android:id="@+id/mTvSKillDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textColor="#000"
            android:textSize="15sp"
            app:fontFamily="monospace" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSkill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvKeyP"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="bottom"
                android:padding="5dp"
                android:text="PASSIVE"
                android:textColor="#000"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="5dp"
                app:autoSizeTextType="uniform"
                app:fontFamily="monospace" />

            <ImageView
                android:id="@+id/mImvSkill0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_image_skill"
                android:padding="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvKeyQ"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="5dp"
                android:text="Q"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="monospace" />

            <ImageView
                android:id="@+id/mImvSkill1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_image_skill"
                android:padding="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvKeyW"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="5dp"
                android:text="W"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="monospace" />

            <ImageView
                android:id="@+id/mImvSkill2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_image_skill"
                android:padding="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvKeyE"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="5dp"
                android:text="E"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="monospace" />

            <ImageView
                android:id="@+id/mImvSkill3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_image_skill"
                android:padding="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvKeyR"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="5dp"
                android:text="R"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="monospace" />

            <ImageView
                android:id="@+id/mImvSkill4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_image_skill"
                android:padding="2dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>